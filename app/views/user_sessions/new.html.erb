<% content_for(:title, t('.title')) %>
<div class="flex justify-center items-center h-screen bg-gray-100">
  <div class="bg-white p-8 shadow-md rounded-md">
    <h2 class="text-center text-2xl font-bold mb-4">ログイン</h2>
    <%= form_with url: login_path do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block font-semibold" %>
        <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      <div class="mb-4">
        <%= f.label :password, class: "block font-semibold" %>
        <%= f.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      <div class="mb-4 flex justify-between items-center">
        <%= f.submit "Login", class: "px-4 py-2 bg-indigo-500 text-white font-semibold rounded-md hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:ring-opacity-75" %>
      </div>
      <div class='text-center'>
        <%= link_to "Forgot password?", new_password_reset_path , class: "mb-4 text-indigo-500 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>
