<% content_for(:title, t('.title')) %>
<div class="container mx-auto px-4">
  <h1 class="text-3xl pt-4 mb-4 font-bold">投稿一覧</h1>

  <nav class="flex flex-col md:flex-row justify-center items-center gap-8 mb-4">
    <%= render 'search_form', q: @q, url: posts_path %>
    <div>
      <%= link_to "新規投稿", new_post_path, class: "px-4 py-2 bg-indigo-500 text-white rounded-md hover:bg-indigo-600 transition duration-200" %>
    </div>
  </nav>

  <% if @q.conditions.present? %>
    <h2 class="text-center mb-4">検索結果: <%= @posts.count %>件</h2>
  <% end %>

  <div class="mt-4 flex justify-center flex-wrap -mx-4">
    <% if @posts.present? %>
      <%= render @posts %>
    <% else %>
      <div class="col-span-full text-center">投稿がありません</div>
    <% end %>
  </div>
  <div class="mt-4">
    <%= paginate @posts , theme: 'custom_theme' %>
  </div>
</div>
