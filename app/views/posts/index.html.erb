<%# Add a container for the post index %>
<% content_for(:title, t('.title')) %>
<div class="container mx-auto">
  <%# Add a heading for the page %>
  <h1 class="text-3xl pt-4 mb-4 font-bold">投稿一覧</h1>

  <nav class="flex justify-center items-center gap-8">
    <%= render 'search_form', q: @q, url: posts_path %>
    <div>
      <%= link_to "新規投稿", new_post_path, class: "px-4 py-2 bg-indigo-500 text-white rounded-md hover:bg-indigo-600" %>
    </div>
  </nav>

  <% if @q.conditions.present? %>
    <h2 class="text-center">検索結果: <%= @posts.count %>件</h2>
  <% end %>

  <div class="grid grid-cols-3 gap-4">
    <% if @posts.present? %>
      <%= render @posts %>
    <% else %>
      <div class="mb-3">掲示板がありません</div>
    <% end %>
  </div>
</div>
