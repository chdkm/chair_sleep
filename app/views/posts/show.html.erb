<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <article class="card">
        <div class="card-body">
          <div class="grid grid-cols-12 gap-4">
            <div class="col-span-3">
              <%= image_tag "post_placeholder.png", width: "300", height: "200", class: "card-img-top img-fluid" %>
            </div>
            <div class="col-span-9">
              <h3 style="display: inline;"><%= @post.title %></h3>
              <ul class="list-inline">
                <li class="list-inline-item"><%= "by #{@post.user.name}" %></li>
                <li class="list-inline-item"><%= l @post.created_at, format: :long %></li>
              </ul>
              <% if current_user.own?(@post) %>
                <div class='flex justify-end'>
                  <%= link_to edit_post_path(@post), id: "button-edit-#{@post.id}" do %>
                    <i>edit</i>
                  <% end %>
                  <%= link_to post_path(@post), id: "button-delete-#{@post.id}", data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm') }, class: "ms-2" do %>
                    <i>destroy</i>
                  <% end %>
                </div>
              <% end %>
            </div>
            <p><%= simple_format(@post.content) %></p>
          </div>
        </div>
      </article>
    </div>
  </div>
  <%= render 'comments/form', comment: @comment, post: @post %>
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <table class="table">
        <tbody id="table-comment">
          <%= render @comments %>
        </tbody>
      </table>
    </div>
  </div>
</div>
