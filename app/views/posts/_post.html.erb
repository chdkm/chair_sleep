<div class="grid grid-cols-3 gap-4">
  <% @posts.each do |post| %>
    <div class="p-4 bg-white shadow-md">
      <h2 class="text-xl font-bold"><%= post.title %></h2>
      <p class="text-gray-500"><%= post.created_at.strftime("%B %d, %Y") %></p>
      <p><%= post.content %></p>
    </div>
  <% end %>
</div>