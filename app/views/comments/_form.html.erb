<div class="row mb-3" id="comment-form">
  <div class="item-center">
    <%= form_with model: comment, url: post_comments_path(post) do |f| %>
      <%= f.label "コメント" %>
      <%= f.text_area :content, class: "form-control mb-3 textarea textarea-secondary textarea-sm w-full max-w-xs", row: "4", placeholder: Comment.human_attribute_name(:content), data: { controller: "textarea" } %>
      <%= f.submit "post", class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" %>
    <% end %>
  </div>
</div>