<% content_for(:title, t('.title')) %>
<div class="container mx-auto">
    <h1 class="text-3xl pt-4 mb-4 font-bold">プロフィール編集</h1>

    <%= link_to t('編集'), edit_profile_path, class: 'btn btn-success float-right' %>

    <table class="table">
      <tr>
        <th scope="row" class="font-bold">ユーザー名</th>
        <td><%= current_user.name %></td>
      </tr>
      <tr>
        <th scope="row" class="font-bold">1日の睡眠時間</th>
        <td><%= current_user.sleep_time %></td>
      </tr>
      <tr>
        <th scope="row" class="font-bold">お気に入り睡眠グッズ</th>
        <td><%= current_user.favorite_goods %></td>
      </tr>
    </table>
</div>