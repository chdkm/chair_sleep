<% content_for(:title, t('.title')) %>
<div class="container mx-auto p-4">
  <h1 class="text-3xl pt-4 mb-4 font-bold">プロフィール編集</h1>

  <%= link_to t('編集'), edit_profile_path, class: 'bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600 float-right mb-4 transition duration-200' %>

  <table class="min-w-full bg-white rounded-lg shadow overflow-hidden">
    <tbody>
      <tr class="border-b">
        <th scope="row" class="font-bold text-left p-4 bg-gray-100">ユーザー名</th>
        <td class="p-4"><%= current_user.name %></td>
      </tr>
      <tr class="border-b">
        <th scope="row" class="font-bold text-left p-4 bg-gray-100">1日の睡眠時間</th>
        <td class="p-4"><%= current_user.sleep_time %></td>
      </tr>
      <tr class="border-b">
        <th scope="row" class="font-bold text-left p-4 bg-gray-100">お気に入り睡眠グッズ</th>
        <td class="p-4"><%= current_user.favorite_goods %></td>
      </tr>
    </tbody>
  </table>
</div>