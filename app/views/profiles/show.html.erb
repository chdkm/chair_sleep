<h1>Profile Details</h1>

<%= form_with(model: @profile, url: profile_path(@profile), method: :patch) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :bio %>
    <%= form.text_area :bio %>
  </div>

  <div>
    <%= form.submit "Update Profile" %>
  </div>
<% end %>
