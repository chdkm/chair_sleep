<main class="container mx-auto py-8">
  <h1 class="text-3xl pt-4 mb-4 font-bold">プロフィール編集</h1>
  <%= form_with model: @user, url: profile_path do |form| %>
    <div class="space-y-4">
      <div>
        <%= form.label "ユーザー名", class: "block text-gray-700 font-bold mb-2" %>
        <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
  
      <div>
        <%= form.label "1日の睡眠時間", class: "block text-gray-700 font-bold mb-2" %>
        <%= form.text_field :sleep_time, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "○時間○分" %>
      </div>
  
      <div>
        <%= form.label "お気に入り睡眠グッズ", class: "block text-gray-700 font-bold mb-2" %>
        <%= form.text_field :favorite_goods, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "例：ビーズクッション"  %>
      </div>
  
      <%= form.submit nil, class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" %>
  
    </div>
  <% end %>
</main>