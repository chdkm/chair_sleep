<main class="container mx-auto py-8">
  <h2 class="text-2xl font-bold mb-4">Profile</h2>
  <%= form_with model: @profile, url: profile_path do |form| %>
    <div class="space-y-4">
      <div>
        <%= form.label :name, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
  
      <div>
        <%= form.label :sleep_time, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.time_field :sleep_time, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
  
      <div>
        <%= form.label :favorite_goods, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.text_field :favorite_goods, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      </div>
  
      <%= form.submit nil, class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" %>
  
    </div>
  <% end %>
</main>