<div class="container mx-auto">
  <h1 class="text-2xl font-bold pt-4 mb-4">アイテムの詳細</h1>
  <%= form_with url: items_path, method: :post, local: true, class: "space-y-4" do |f| %>
    <div>
      <%= label_tag 'item[name]', 'アイテム名', class: "block text-sm font-medium text-gray-700" %>
      <%= text_field_tag 'item[name]', @item['itemName'], class: "mt-1 p-2 block w-full border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div>
      <%= label_tag 'item[image_url]', 'アイテム画像', class: "block text-sm font-medium text-gray-700" %>
      <% if @item['mediumImageUrls'].present? %>
        <%= image_tag @item['mediumImageUrls'].first, class: "mt-2 w-32 h-auto rounded-md" %>
        <%= hidden_field_tag 'item[image_url]', @item['mediumImageUrls'].first %>
      <% else %>
        <p class="text-red-500">画像が見つかりませんでした。</p>
      <% end %>
    </div>
    <div>
      <%= label_tag 'item[price]', '価格', class: "block text-sm font-medium text-gray-700" %>
      <%= text_field_tag 'item[price]', @item['itemPrice'], class: "mt-1 p-2 block border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <%= hidden_field_tag :post_id, params[:post_id] %>
    <div>
      <%= submit_tag 'グッズ登録', class: "bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition duration-200" %>
    </div>
  <% end %>
</div>