<% flash.each do |message_type, message| %>
  <% case message_type %>
  <% when "success" %>
    <div class="bg-success border border-blue-500 text-blue-700 px-4 py-3 rounded" role="alert">
      <p class="font-bold"><%= message %></p>
    </div>
  <% when "danger" %>
    <div class="bg-error border border-red-400 text-red-700 px-4 py-3 rounded" role="alert">
      <strong class="font-bold"><%= message %></strong>
    </div>
  <% end %>
<% end %>