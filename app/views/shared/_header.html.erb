<header class="bg-sky-950 text-white py-4">
  <div class="container mx-auto flex items-center justify-between px-4">
    <%= link_to root_path , class: "bg-customBeige text-2xl font-bold" do %>
      椅子寝
    <% end %>
    

    <nav class="text-right top-0 left-3">
      <button id="menuBtn" type="button" class="fixed top-3 right-4 z-10 flex h-14 w-14 items-center justify-center rounded-md border-none bg-blue-300 text-white sm:hidden" >
        <i id="menuIconBars" class="fa-solid fa-bars fa-2x"></i>
        <i id="menuIconX" class="fa-solid fa-xmark fa-2x hidden"></i>
      </button>
      <ul id="menu" class="fixed top-0 left-0 z-0 flex w-full translate-x-full flex-col bg-customBlue text-center font-bold text-white transition-all ease-linear sm:static sm:w-full sm:translate-x-0 sm:flex-row sm:place-items-center sm:bg-white sm:text-black">
        <%= link_to "ブックマーク一覧", bookmarks_posts_path, class: "hover:text-gray-300" %>
        <%= link_to "いいねランキング一覧", likes_posts_path, class: "hover:text-gray-300" %>
        <%= link_to "プロフィール設定", profile_path, class: "hover:text-gray-300" %>
        <%= link_to "通知設定", edit_user_setting_path, class: "hover:text-gray-300" %>
        <%= link_to "投稿一覧", posts_path, class: "hover:text-gray-300" %>
        <%= link_to "ログアウト", logout_path, class: "hover:text-gray-300", data: { turbo_method: :delete } %>
      </ul>
    </nav>
  </div>
</header>

<script>
  menuBtn.addEventListener('click', () => {
    menu.classList.toggle('translate-x-full');
    menuIconBars.classList.toggle('hidden');
    menuIconX.classList.toggle('hidden');
  });
</script>